<% if flash.any? %>
  <% flash.each do |notice| %>
    <%= notice[1] %>
  <% end %>
<% end %>

<h1>Submit an Answer</h1>

  <%= form_for @answer, url: {action: "create"} do |f| %>
    <%= f.label :title %>
    <%= f.text_field :title %>

    <%= f.label :body %>
    <%= f.text_area :body %>

    <%= f.submit "Submit answer" %>
  <% end %>
