<table class="table">
  <tr>
    <th>Question</th>
    <th>Asked By</th>
    <th>Updated</th>
    <th>Delete?</th>
    <th>Edit<th>
  </tr>

  <% @questions.each do |question| %>
    <tr>
      <td><%= link_to question.title, question_path(question.id)%></td>
      <td><%= question.user.username %></td>
      <td><%= question.created_at %></td>
      <td><%= link_to 'Delete', question_path(question.id), method: :delete %></td>
      <td><%= link_to 'Edit', edit_question_path(question.id) %></td>
    <tr>
  <% end %>
</table>

<%= link_to "Ask a new question", new_question_path %>
